@model phim.Models.RAP_PHIM

@{
    ViewBag.Title = "Chỉnh sửa rạp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4" style="background-color:#111;">
    <div class="text-center text-white py-3"
         style="background-color:#7b0000; letter-spacing:2px; font-size:32px; font-weight:700;">
        CHỈNH SỬA RẠP MỚI
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.IDRap)

        <div class="d-flex flex-column align-items-center mt-5 mb-5">
            <div style="width:60%; max-width:700px; color:white; font-size:20px;">

                <div class="mb-4 d-flex align-items-center">
                    <label class="me-4" style="width:120px;">Tên Rạp:</label>
                    @Html.TextBoxFor(m => m.TenRap,
                        new { @class = "form-control", style = "border-radius:999px;" })
                </div>

                <div class="mb-4 d-flex align-items-center">
                    <label class="me-4" style="width:120px;">SDT:</label>
                    @Html.TextBoxFor(m => m.SoDienThoai,
                        new { @class = "form-control", style = "border-radius:999px;" })
                </div>

                <div class="mb-4 d-flex align-items-center">
                    <label class="me-4" style="width:120px;">Địa Chỉ:</label>
                    @Html.TextBoxFor(m => m.DiaChi,
                        new { @class = "form-control", style = "border-radius:999px;" })
                </div>

                <div class="mb-4 d-flex align-items-center">
                    <label class="me-4" style="width:120px;">Email:</label>
                    @Html.TextBoxFor(m => m.Email,
                        new { @class = "form-control", style = "border-radius:999px;" })
                </div>

            </div>

            <button type="submit" class="btn mt-4"
                    style="background-color:#7b0000; color:white; padding:8px 32px; border-radius:0;">
                Hoàn tất
            </button>
        </div>
    }
</div>
