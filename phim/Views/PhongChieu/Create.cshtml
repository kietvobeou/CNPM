@model phim.Models.PHONG_CHIEU

@{
    ViewBag.Title = "Thêm phòng chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container-fluid py-4" style="background-color:#111;">
    <div class="text-center text-white py-3"
         style="background-color:#7b0000; letter-spacing:2px; font-size:32px; font-weight:700;">
        THÊM PHÒNG CHIẾU
    </div>

    <div class="d-flex justify-content-center mt-5">
        <div style="width:60%; max-width:700px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    <label class="form-label text-white">Tên Phòng:</label>
                    @Html.TextBoxFor(m => m.TenPhong,
                        new
                        {
                            @class = "form-control",
                            style = "background-color:#ddd;border-radius:30px;border:none;padding:10px 18px;"
                        })
                    @Html.ValidationMessageFor(m => m.TenPhong, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label text-white">Rạp:</label>
                    @Html.DropDownList("IDRap", null, "-- Chọn rạp --",
                        new
                        {
                            @class = "form-control",
                            style = "background-color:#ddd;border-radius:30px;border:none;padding:10px 18px;"
                        })
                    @Html.ValidationMessageFor(m => m.IDRap, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label text-white">Số lượng ghế:</label>
                    @Html.TextBoxFor(m => m.SoLuongGhe,
                        new
                        {
                            @class = "form-control",
                            type = "number",
                            min = "0",
                            style = "background-color:#ddd;border-radius:30px;border:none;padding:10px 18px;"
                        })
                    @Html.ValidationMessageFor(m => m.SoLuongGhe, "", new { @class = "text-danger" })
                </div>

                <div class="mb-4">
                    <label class="form-label text-white">Loại phòng:</label>
                    @Html.TextBoxFor(m => m.LoaiPhong,
                        new
                        {
                            @class = "form-control",
                            style = "background-color:#ddd;border-radius:30px;border:none;padding:10px 18px;"
                        })
                    @Html.ValidationMessageFor(m => m.LoaiPhong, "", new { @class = "text-danger" })
                </div>

                <div class="text-center">
                    <button type="submit" class="btn"
                            style="background-color:#7b0000;color:white;padding:8px 32px;border-radius:0;">
                        Hoàn tất
                    </button>
                </div>
            }
        </div>
    </div>
</div>
