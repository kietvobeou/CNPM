@{
    ViewBag.Title = "Báo Cáo Thống Kê";
    Layout = "~/Views/Shared/_KhachHangLayout.cshtml";
}

<style>
    .report-container {
        background-color: #1a1a1a;
        color: white;
        min-height: 100vh;
        padding: 20px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 2px solid #dc3545;
    }

        .page-header h1 {
            font-size: 32px;
            font-weight: bold;
            color: #fff;
            margin-bottom: 10px;
        }

        .page-header p {
            color: #aaa;
            font-size: 16px;
        }

    .report-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .report-card {
        background: linear-gradient(135deg, #2a2a2a, #1a1a1a);
        border-radius: 15px;
        padding: 25px;
        border: 1px solid #333;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .report-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
        }

        .report-card h3 {
            font-size: 18px;
            margin-bottom: 15px;
            color: #ddd;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .report-card h3 i {
                font-size: 20px;
            }

        .report-card .value {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #fff;
        }

        .report-card .change {
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

    .card-danger {
        border-top: 4px solid #dc3545;
    }

    .card-warning {
        border-top: 4px solid #ffc107;
    }

    .card-success {
        border-top: 4px solid #28a745;
    }

    .card-info {
        border-top: 4px solid #17a2b8;
    }

    .top-movies-section {
        background: linear-gradient(135deg, #2a2a2a, #1a1a1a);
        border-radius: 15px;
        padding: 25px;
        border: 1px solid #333;
        margin-bottom: 40px;
    }

        .top-movies-section h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .top-movies-section h2 i {
                color: #ff6b6b;
            }

    .movie-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .movie-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        background: #333;
        border-radius: 10px;
        border-left: 4px solid #dc3545;
    }

        .movie-item .movie-info {
            flex: 1;
        }

        .movie-item .movie-name {
            font-size: 18px;
            font-weight: bold;
            color: #fff;
            margin-bottom: 5px;
        }

        .movie-item .movie-stats {
            font-size: 14px;
            color: #aaa;
        }

        .movie-item .movie-rank {
            font-size: 24px;
            font-weight: bold;
            color: #dc3545;
            margin-right: 20px;
            min-width: 40px;
        }

    .export-btn {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
    }

        .export-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.4);
        }

        .export-btn i {
            font-size: 18px;
        }

    .chart-container {
        background: linear-gradient(135deg, #2a2a2a, #1a1a1a);
        border-radius: 15px;
        padding: 25px;
        border: 1px solid #333;
        margin-bottom: 40px;
    }

        .chart-container h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .date-filter {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

        .date-filter input {
            background: #333;
            border: 1px solid #444;
            color: white;
            padding: 8px 12px;
            border-radius: 6px;
        }

        .date-filter button {
            background: #dc3545;
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 6px;
            cursor: pointer;
        }

    .no-data {
        text-align: center;
        padding: 40px;
        color: #aaa;
        font-style: italic;
    }

    @@media (max-width: 768px) {
        .report-cards {
            grid-template-columns: 1fr;
        }

        .movie-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }

            .movie-item .movie-rank {
                align-self: flex-start;
            }
    }
</style>

<div class="report-container">
    <div class="page-header">
        <h1>📊 BÁO CÁO THỐNG KÊ</h1>
        <p>Thống kê chi tiết doanh thu và hoạt động của rạp phim</p>
    </div>

    <div class="report-cards">
        <!-- Doanh thu hôm nay -->
        <div class="report-card card-danger">
            <h3><i class="fas fa-money-bill-wave"></i> DOANH THU HÔM NAY</h3>
            <div class="value">@ViewBag.DoanhThuHomNay</div>
            <div class="change @ViewBag.TangGiamHomNayClass">
                <i class="fas fa-arrow-@(ViewBag.TangGiamHomNay == "Tăng" ? "up" : "down")"></i>
                So với hôm qua: <strong>@ViewBag.TangGiamHomNay @Math.Abs(ViewBag.TyLeThayDoiHomNay)%</strong>
            </div>
        </div>

        <!-- Vé đã bán hôm nay -->
        <div class="report-card card-warning">
            <h3><i class="fas fa-ticket-alt"></i> VÉ ĐÃ BÁN HÔM NAY</h3>
            <div class="value">@ViewBag.SoVeHomNay VÉ</div>
            <div class="change @ViewBag.TangGiamVeClass">
                <i class="fas fa-arrow-@(ViewBag.TangGiamVe == "Tăng" ? "up" : "down")"></i>
                So với hôm qua: <strong>@ViewBag.TangGiamVe @ViewBag.ChenhLechVe vé</strong>
            </div>
        </div>

        <!-- Doanh thu tháng này -->
        <div class="report-card card-success">
            <h3><i class="fas fa-chart-line"></i> DOANH THU THÁNG NÀY</h3>
            <div class="value">@ViewBag.DoanhThuThangNay</div>
            <div class="change @ViewBag.TangGiamThangClass">
                <i class="fas fa-arrow-@(ViewBag.TangGiamThang == "Tăng" ? "up" : "down")"></i>
                So với tháng trước: <strong>@ViewBag.TangGiamThang @ViewBag.TyLeThayDoiThang%</strong>
            </div>
        </div>
    </div>

    <!-- Top phim bán chạy -->
    <div class="top-movies-section">
        <h2><i class="fas fa-crown"></i> TOP PHIM BÁN CHẠY TRONG NGÀY</h2>

        @if (ViewBag.TopPhimHomNay != null && ((List<CNPM.Controllers.TopPhimViewModel>)ViewBag.TopPhimHomNay).Count > 0)
        {
            <div class="movie-list">
                @{
                    int rank = 1;
                    var topPhimList = (List<CNPM.Controllers.TopPhimViewModel>)ViewBag.TopPhimHomNay;
                }
                @foreach (var phim in topPhimList)
                {
                    <div class="movie-item">
                        <div class="movie-rank">#@rank</div>
                        <div class="movie-info">
                            <div class="movie-name">@phim.TenPhim</div>
                            <div class="movie-stats">
                                @phim.SoVeDaBan vé • @phim.DoanhThu.ToString("N0") VNĐ
                            </div>
                        </div>
                        <div>
                            @if (rank == 1)
                            {
                                <i class="fas fa-fire" style="color: #ff6b6b; font-size: 24px;"></i>
                            }
                            else if (rank == 2)
                            {
                                <i class="fas fa-star" style="color: #ffc107; font-size: 24px;"></i>
                            }
                            else if (rank == 3)
                            {
                                <i class="fas fa-award" style="color: #6c757d; font-size: 24px;"></i>
                            }
                        </div>
                    </div>
                    rank++;
                }
            </div>
        }
        else
        {
            <div class="no-data">
                <i class="fas fa-film" style="font-size: 48px; margin-bottom: 15px;"></i>
                <p>Chưa có dữ liệu bán vé hôm nay</p>
            </div>
        }

        <!-- Nút xuất file -->
        <div style="margin-top: 25px; text-align: right;">
            <a href="@Url.Action("XuatExcel", "BaoCao")" class="export-btn">
                <i class="fas fa-file-export"></i> XUẤT FILE EXCEL
            </a>
        </div>
    </div>
