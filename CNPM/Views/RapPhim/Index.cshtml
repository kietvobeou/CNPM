@model IEnumerable<RAP_PHIM>

@{
    ViewBag.Title = "Danh sách rạp";
    Layout = "~/Views/Shared/_KhachHangLayout.cshtml";
}

<style>
    body {
        background-color: #111;
    }

    .custom-table {
        width: 95%;
        margin: 0 auto;
        border-collapse: collapse;
    }

        .custom-table thead {
            background-color: #0D0D0D;
        }

        .custom-table th {
            padding: 18px 15px;
            color: #D5D5D5 !important;
            text-align: center;
            border: none;
            font-weight: 600;
            font-size: 14px;
        }

        .custom-table tbody tr {
            background-color: #696969 !important;
            border-bottom: 1px solid #555;
        }

        .custom-table td {
            padding: 16px 15px;
            color: #D5D5D5 !important;
            text-align: center;
            border: none;
        }

    /* ========== NÚT HÀNH ĐỘNG ========== */
    .action-container {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .action-btn {
        width: 36px;
        height: 36px;
        border-radius: 6px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(13, 13, 13, 0.3);
        border: 1px solid;
        transition: all 0.2s ease;
    }

    /* Nút sửa - màu D5D5D5 */
    .edit-btn {
        color: #D5D5D5 !important;
        border-color: #D5D5D5 !important;
    }

        .edit-btn:hover {
            background-color: #D5D5D5;
            color: #000 !important;
        }

    /* Nút xóa - màu đỏ */
    .delete-btn {
        color: #e74c3c !important;
        border-color: #e74c3c !important;
    }

        .delete-btn:hover {
            background-color: #e74c3c;
            color: white !important;
        }

    /* ========== TIÊU ĐỀ ========== */
    .page-header {
        background-color: #0D0D0D;
        color: #D5D5D5 !important;
        padding: 20px 0;
        text-align: center;
        font-size: 28px;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 30px;
        border-bottom: 3px solid #7b0000;
    }

    .add-new-btn {
        background-color: #0D0D0D;
        color: #D5D5D5 !important;
        padding: 12px 35px;
        border: 1px solid #7b0000;
        border-radius: 6px;
        font-weight: 600;
        text-transform: uppercase;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .add-new-btn:hover {
            background-color: #7b0000;
            color: white !important;
            text-decoration: none;
        }

    /* Thêm style để đảm bảo tất cả text trong bảng đều là D5D5D5 */
    .custom-table tbody tr,
    .custom-table tbody tr td,
    .custom-table tbody tr span,
    .custom-table tbody tr i,
    .custom-table tbody tr a {
        color: #D5D5D5 !important;
    }

    /* Email link style */
    .email-link {
        text-decoration: none;
    }

        .email-link:hover {
            color: #ffffff !important;
            text-decoration: underline;
        }

    /* Hover effect - khi hover thì đổi ngược lại: nền đỏ, chữ trắng */
    .custom-table tbody tr:hover {
        background-color: #7b0000 !important;
    }

        .custom-table tbody tr:hover td,
        .custom-table tbody tr:hover span,
        .custom-table tbody tr:hover i,
        .custom-table tbody tr:hover a {
            color: #ffffff !important;
        }
</style>

<div class="container-fluid py-4">
    <!-- TIÊU ĐỀ -->
    <div class="page-header">
        <i class="fas fa-film me-2"></i>DANH SÁCH RẠP PHIM
    </div>

    <!-- BẢNG DANH SÁCH -->
    <div class="table-responsive">
        <table class="custom-table">
            <thead>
                <tr>
                    <th class="text-center">Tên Rạp</th>
                    <th class="text-center">Địa Chỉ</th>
                    <th class="text-center">Số Điện Thoại</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center fw-bold">
                            <i class="fas fa-building me-1"></i>@item.TenRap
                        </td>
                        <td class="text-center">
                            <span>
                                <i class="fas fa-map-marker-alt me-1"></i>@item.DiaChi
                            </span>
                        </td>
                        <td class="text-center">
                            <span>
                                <i class="fas fa-phone me-1"></i>@item.SoDienThoai
                            </span>
                        </td>
                        <td class="text-center">
                            <a href="mailto:@item.Email" class="email-link">
                                <i class="fas fa-envelope me-1"></i>@item.Email
                            </a>
                        </td>
                        <td class="text-center">
                            <div class="action-container">
                                <a href="@Url.Action("Edit", "RapPhim", new { id = item.IDRap })"
                                   class="action-btn edit-btn"
                                   title="Chỉnh sửa">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a href="@Url.Action("Delete", "RapPhim", new { id = item.IDRap })"
                                   class="action-btn delete-btn"
                                   title="Xóa"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa rạp này?\\nTất cả phòng chiếu và suất chiếu liên quan cũng sẽ bị xóa.');">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- NÚT THÊM RẠP -->
    <div class="text-center mt-4 mb-4">
        <a href="@Url.Action("Create","RapPhim")" class="add-new-btn">
            <i class="fas fa-plus-circle me-1"></i> THÊM RẠP MỚI
        </a>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Hiệu ứng hover đơn giản cho các hàng
        $('.custom-table tbody tr').hover(
            function () {
                $(this).css('background-color', '#7b0000');
                $(this).find('td').css('color', '#ffffff');
                $(this).find('span').css('color', '#ffffff');
                $(this).find('i').css('color', '#ffffff');
                $(this).find('a').css('color', '#ffffff');
            },
            function () {
                $(this).css('background-color', '#696969');
                $(this).find('td').css('color', '#D5D5D5');
                $(this).find('span').css('color', '#D5D5D5');
                $(this).find('i').css('color', '#D5D5D5');
                $(this).find('a').css('color', '#D5D5D5');
            }
        );
    });
</script>