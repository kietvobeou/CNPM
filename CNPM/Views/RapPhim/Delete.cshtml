
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_KhachHangLayout.cshtml";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container-fluid py-4" style="background-color:#111;">
    <div class="text-center text-white py-3"
         style="background-color:#7b0000; letter-spacing:2px; font-size:32px; font-weight:700;">
        XÁC NHẬN XÓA RẠP
    </div>

    <div class="d-flex justify-content-center mt-5">
        <div class="card p-4" style="width:80%; background-color:#333; border:none;">
            <div class="text-center text-white mb-4">
                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                <h4>Bạn có chắc chắn muốn xóa rạp này?</h4>
                <p class="text-muted">Thao tác này không thể hoàn tác</p>
            </div>

            <div class="text-white mb-4 p-3" style="background-color:#444; border-left:4px solid #7b0000;">
                <h5>Thông tin rạp sẽ bị xóa:</h5>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <p><strong>Tên Rạp:</strong> @Model.TenRap</p>
                        <p><strong>Số Điện Thoại:</strong> @Model.SoDienThoai</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Địa Chỉ:</strong> @Model.DiaChi</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm("Delete", "RapPhim", new { id = Model.IDRap }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="text-center mt-4">
                    <button type="submit" class="btn" style="background-color:#c0392b; color:white; padding:8px 32px; border-radius:0;">
                        <i class="fas fa-trash me-2"></i>Xóa Rạp
                    </button>
                    <a href="@Url.Action("Index", "RapPhim")" class="btn btn-secondary ms-2" style="padding:8px 32px; border-radius:0;">
                        <i class="fas fa-times me-2"></i>Hủy Bỏ
                    </a>
                </div>
            }
        </div>
    </div>
</div>
