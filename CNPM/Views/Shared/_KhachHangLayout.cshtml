<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - N13 Cinema</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;500;600;700&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <header class="header-container">
        <a href="@Url.Action("Index", "Home")" class="logo-link">
            <img src="~/Content/HinhAnh/logo.svg" alt="N13 Cinema Logo" class="logo-img" width="100">
        </a>

        <nav class="nav-menu">
            <div class="nav-item">
                <a href="@Url.Action("MyTickets", "Account")" class="nav-link">Vé của tôi</a>
            </div>
            <div class="nav-item">
                <a href="@Url.Action("NowShowing", "Movies")" class="nav-link">Phim đang chiếu</a>
            </div>
            <div class="nav-item">
                <a href="@Url.Action("ComingSoon", "Movies")" class="nav-link">Phim sắp chiếu</a>
            </div>
            <div class="nav-item">
                <a href="@Url.Action("Index", "News")" class="nav-link">Tin tức</a>
            </div>
            <div class="nav-item">
                <a href="@Url.Action("Logout", "Account")" class="nav-link">Đăng xuất</a>
            </div>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer-container">
        <div class="footer-content">
            <div class="footer-section footer-logo-section">
                <img src="~/Content/HinhAnh/Logo.svg" alt="N13 Cinema Logo" class="footer-logo" width="200">
            </div>
            <div class="footer-section">
                <h3>TÀI KHOẢN</h3>
                <ul>
                    <li><a href="@Url.Action("Login", "Account")"><i class="fas fa-sign-in-alt"></i> Đăng Nhập</a></li>
                    <li><a href="@Url.Action("Register", "Account")"><i class="fas fa-user-plus"></i> Đăng Ký</a></li>
                    <li><a href="@Url.Action("MyTickets", "Account")"><i class="fas fa-ticket-alt"></i> Vé Của Tôi</a></li>
                    <li><a href="@Url.Action("Profile", "Account")"><i class="fas fa-user-circle"></i> Tài Khoản</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>KẾT NỐI</h3>
                <ul>
                    <li><a href="#" target="_blank"><i class="fab fa-facebook"></i> Facebook</a></li>
                    <li><a href="#" target="_blank"><i class="fab fa-instagram"></i> Instagram</a></li>
                    <li><a href="#" target="_blank"><i class="fab fa-youtube"></i> YouTube</a></li>
                    <li><a href="#" target="_blank"><i class="fab fa-tiktok"></i> Tiktok</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>CHĂM SÓC KHÁCH HÀNG</h3>
                <div class="contact-info">
                    <i class="fas fa-phone-alt"></i>
                    <div>
                        <p style="color: #B3B3B3; font-size: 14px;">Hotline</p>
                        <p style="color: #F5F5F5; font-weight: 600; font-size: 16px;">1800 8077</p>
                    </div>
                </div>
                <div class="contact-info">
                    <i class="far fa-clock"></i>
                    <div>
                        <p style="color: #B3B3B3; font-size: 14px;">Giờ làm việc</p>
                        <p style="color: #F5F5F5; font-weight: 600; font-size: 16px;">8:00 - 22:00</p>
                    </div>
                </div>
                <p style="margin-left: 32px; margin-top: -10px; color: #B3B3B3; font-size: 13px;">(Tất cả các ngày)</p>
                <div class="contact-info">
                    <i class="fas fa-envelope"></i>
                    <div>
                        <p style="color: #B3B3B3; font-size: 14px;">Email</p>
                        <p style="color: #F5F5F5; font-weight: 600; font-size: 16px;">hoidap@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year - N13 Cinema. Tất cả các quyền được bảo lưu.</p>
        </div>
    </footer>
</body>
</html>