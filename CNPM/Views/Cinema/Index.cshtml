@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_KhachHangLayout.cshtml";
    var phimSapChieu = (ViewBag.PhimSC as IEnumerable<PHIM>) ?? Enumerable.Empty<PHIM>();
    var phimDangChieu = (ViewBag.PhimDC as IEnumerable<PHIM>) ?? Enumerable.Empty<PHIM>();
    var tinTuc = (ViewBag.Tin as IEnumerable<TIN_TUC>) ?? Enumerable.Empty<TIN_TUC>();
}
<link href="~/Content/Home.css" rel="stylesheet" />
<script src="~/Content/Home.js"></script>

<section class="banner-section">
    <img src="~/Content/HinhAnh/Banner.jpg"
         alt="Cinema Banner" class="banner-img">

    <div class="banner-overlay">
        <h1 class="banner-title">TRẢI NGHIỆM ĐIỆN ẢNH ĐỈNH CAO</h1>
        <p class="banner-subtitle">Khám phá thế giới phim ảnh đa dạng với chất lượng hình ảnh và âm thanh sống động nhất. Cùng N13 Cinema đắm chìm trong những câu chuyện tuyệt vời.</p>
        <button class="banner-cta">Đặt vé ngay</button>
    </div>
</section>

<section class="movie-section py-5 mt-5">
    <div class="container">
        <!-- Tiêu đề căn trái -->
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="section-title text-start">PHIM ĐANG CHIẾU</h2>
            </div>
        </div>

        <div class="row">
            @foreach (var item in phimDangChieu)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="movie-card">
                        <div class="movie-image-container">
                            <img src="~/Content/HinhAnh/@item.AnhBia" alt="@item.TenPhim" class="movie-img">
                            <div class="movie-overlay">
                                <button class="movie-detail-btn" onclick="location.href='@Url.Action("Detail", "Movies")'">Chi Tiết</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Nút Xem Thêm ở giữa -->
        <div class="row mt-4">
            <div class="col-12 text-center">
                <button class="view-more-center" onclick="location.href='@Url.Action("NowShowing", "Movies")'">Xem Thêm</button>
            </div>
        </div>
    </div>
</section>

<section class="promotion-section py-5 mt-5">
<div class="container">
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="section-title text-start">ƯU ĐÃI VÀ KHUYẾN MÃI</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <!-- Bootstrap Carousel for Images -->
            <div id="promotionCarousel" class="carousel slide" data-bs-ride="carousel">
                <!-- Indicators -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#promotionCarousel" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#promotionCarousel" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#promotionCarousel" data-bs-slide-to="2"></button>
                    <button type="button" data-bs-target="#promotionCarousel" data-bs-slide-to="3"></button>
                </div>

                <!-- Slides -->
                <div class="carousel-inner">
                    <!-- Slide 1 -->
                    <div class="carousel-item active">
                        <a href="@Url.Action("NewsDetail", "News", new { id = 1 })" class="promotion-link">
                            <img src="https://via.placeholder.com/1200x400/590808/F5F5F5?text=KHUYẾN+MÃI+MST+-+GIẢM+20%"
                                 class="d-block w-100 promotion-img" alt="Khuyến mãi MST">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Khuyến mãi MST</h5>
                                <p>Giảm 20% cho thành viên mới</p>
                            </div>
                        </a>
                    </div>

                    <!-- Slide 2 -->
                    <div class="carousel-item">
                        <a href="@Url.Action("NewsDetail", "News", new { id = 2 })" class="promotion-link">
                            <img src="https://via.placeholder.com/1200x400/590808/F5F5F5?text=KHUYẾN+MÃI+T51+-+MUA+2+TẶNG+1"
                                 class="d-block w-100 promotion-img" alt="Khuyến mãi T51">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Khuyến mãi T51</h5>
                                <p>Mua 2 vé tặng 1 bắp nước</p>
                            </div>
                        </a>
                    </div>

                    <!-- Slide 3 -->
                    <div class="carousel-item">
                        <a href="@Url.Action("NewsDetail", "News", new { id = 3 })" class="promotion-link">
                            <img src="https://via.placeholder.com/1200x400/590808/F5F5F5?text=KHUYẾN+MÃI+MONZ+-+VÉ+THỨ+2+50K"
                                 class="d-block w-100 promotion-img" alt="Khuyến mãi MONZ">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Khuyến mãi MONZ</h5>
                                <p>Vé thứ 2 chỉ 50k</p>
                            </div>
                        </a>
                    </div>

                    <!-- Slide 4 -->
                    <div class="carousel-item">
                        <a href="@Url.Action("NewsDetail", "News", new { id = 4 })" class="promotion-link">
                            <img src="https://via.placeholder.com/1200x400/590808/F5F5F5?text=KHUYẾN+MÃI+T1D+-+GIẢM+30%+THỨ+3"
                                 class="d-block w-100 promotion-img" alt="Khuyến mãi T1D">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Khuyến mãi T1D</h5>
                                <p>Giảm 30% thứ 3 hàng tuần</p>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#promotionCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#promotionCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>
</section>

