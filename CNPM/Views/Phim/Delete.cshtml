@model CNPM.PHIM
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_KhachHangLayout.cshtml";
}


@{
    ViewBag.Title = "Xóa Phim";
    Layout = "~/Views/Shared/_KhachHangLayout.cshtml";
}

<style>
    .delete-container {
        max-width: 700px;
        margin: 50px auto;
        background: #111;
        padding: 30px;
        border-radius: 12px;
        border: 1px solid #dc3545;
        box-shadow: 0 0 15px rgba(220, 53, 69, 0.4);
        color: white;
    }

    .delete-title {
        font-size: 30px;
        font-weight: bold;
        color: #dc3545;
        text-align: center;
        margin-bottom: 25px;
    }

    .delete-info {
        background: #1b1b1b;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        border-left: 4px solid #dc3545;
    }

    .delete-label {
        color: #aaa;
        font-size: 14px;
    }

    .delete-value {
        font-size: 20px;
        color: #f5f5f5;
        font-weight: bold;
        margin-bottom: 12px;
    }

    .btn-danger-dark {
        background: linear-gradient(90deg, #b31217, #e52d27);
        padding: 12px;
        border: none;
        width: 48%;
        border-radius: 8px;
        font-size: 16px;
        color: white;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-danger-dark:hover {
            box-shadow: 0 0 15px rgba(229, 45, 39, 0.7);
            transform: scale(1.03);
        }

    .btn-cancel {
        width: 48%;
        padding: 12px;
        border-radius: 8px;
        background: #333;
        color: #fff;
        border: 1px solid #555;
        font-size: 16px;
    }

        .btn-cancel:hover {
            background: #444;
        }
</style>

<div class="delete-container">

    <div class="delete-title">XÁC NHẬN XÓA PHIM</div>

    <div class="delete-info">
        <div class="delete-label">Tên phim:</div>
        <div class="delete-value">@Model.TenPhim</div>

        <div class="delete-label">Thể loại:</div>
        <div class="delete-value">@Model.TheLoai</div>

        <div class="delete-label">Thời lượng:</div>
        <div class="delete-value">@Model.ThoiLuong phút</div>

        <div class="delete-label">Trạng thái:</div>
        <div class="delete-value">@Model.TrangThai</div>

        <img src="~/Content/HinhAnh/@Model.AnhBia"
             alt="Ảnh phim"
             style="width:200px; border-radius:8px; margin-top:10px;" />
    </div>

    @using (Html.BeginForm("Delete", "Phim", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.IDPhim)

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn-danger-dark">Xóa phim</button>

            <a href="@Url.Action("SapChieu", "Phim")"
               class="btn-cancel text-center">Hủy</a>
        </div>
    }
</div>


