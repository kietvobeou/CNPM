@model PHONG_CHIEU
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_KhachHangLayout.cshtml";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container-fluid py-4" style="background-color:#111;">
    <div class="text-center text-white py-3"
         style="background-color:#7b0000; letter-spacing:2px; font-size:32px; font-weight:700;">
        CHỈNH SỬA PHÒNG CHIẾU
    </div>

    <div class="d-flex justify-content-center mt-5">
        <div class="card p-4" style="width:80%; background-color:#333; border:none;">
            @using (Html.BeginForm("Edit", "PhongChieu", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.IDPhong)

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-white">Tên Phòng</label>
                        @Html.EditorFor(model => model.TenPhong, new { htmlAttributes = new { @class = "form-control bg-dark text-white" } })
                        @Html.ValidationMessageFor(model => model.TenPhong, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label text-white">Rạp</label>
                        @Html.DropDownList("IDRap", (SelectList)ViewBag.IDRap, "Chọn rạp", new { @class = "form-control bg-dark text-white" })
                        @Html.ValidationMessageFor(model => model.IDRap, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-white">Số Lượng Ghế</label>
                        @Html.EditorFor(model => model.SoLuongGhe, new { htmlAttributes = new { @class = "form-control bg-dark text-white", type = "number", min = "1" } })
                        @Html.ValidationMessageFor(model => model.SoLuongGhe, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label text-white">Loại Phòng</label>
                        @Html.DropDownListFor(model => model.LoaiPhong,
                            new SelectList(new[] { "2D", "3D", "IMAX", "4DX", "SCREENX" }),
                            "Chọn loại phòng",
                            new { @class = "form-control bg-dark text-white" })
                        @Html.ValidationMessageFor(model => model.LoaiPhong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn" style="background-color:#7b0000; color:white; padding:8px 32px; border-radius:0;">
                        <i class="fas fa-save me-2"></i>Lưu Thay Đổi
                    </button>
                    <a href="@Url.Action("Index", "PhongChieu")" class="btn btn-secondary ms-2" style="padding:8px 32px; border-radius:0;">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}