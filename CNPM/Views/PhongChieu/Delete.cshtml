@model PHONG_CHIEU
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_KhachHangLayout.cshtml";
}
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container-fluid py-4" style="background-color:#111;">
    <div class="text-center text-white py-3"
         style="background-color:#7b0000; letter-spacing:2px; font-size:32px; font-weight:700;">
        XÁC NHẬN XÓA PHÒNG CHIẾU
    </div>

    <div class="d-flex justify-content-center mt-5">
        <div class="card p-4" style="width:80%; background-color:#333; border:none;">
            <div class="text-center text-white mb-4">
                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                <h4>Bạn có chắc chắn muốn xóa phòng chiếu này?</h4>
                <p class="text-muted">Thao tác này không thể hoàn tác</p>
            </div>

            <div class="text-white mb-4 p-3" style="background-color:#444; border-left:4px solid #7b0000;">
                <h5>Thông tin phòng sẽ bị xóa:</h5>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <p><strong>Tên Phòng:</strong> @Model.TenPhong</p>
                        <p><strong>Số Lượng Ghế:</strong> @Model.SoLuongGhe</p>
                        <p><strong>Loại Phòng:</strong> @Model.LoaiPhong</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Rạp:</strong> @(Model.RAP_PHIM != null ? Model.RAP_PHIM.TenRap : ("Rạp " + Model.IDRap))</p>
                        @if (Model.RAP_PHIM != null)
                        {
                            <p><strong>Địa chỉ rạp:</strong> @Model.RAP_PHIM.DiaChi</p>
                        }
                    </div>
                </div>

                @if (Model.XUAT_CHIEU != null && Model.XUAT_CHIEU.Any())
                {
                    <div class="alert alert-danger mt-3">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Cảnh báo:</strong> Phòng này có @Model.XUAT_CHIEU.Count() suất chiếu.
                        Xóa phòng sẽ xóa tất cả suất chiếu liên quan!
                    </div>
                }
            </div>

            @using (Html.BeginForm("Delete", "PhongChieu", new { id = Model.IDPhong }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="text-center mt-4">
                    <button type="submit" class="btn" style="background-color:#c0392b; color:white; padding:8px 32px; border-radius:0;">
                        <i class="fas fa-trash me-2"></i>Xóa Phòng
                    </button>
                    <a href="@Url.Action("Index", "PhongChieu")" class="btn btn-secondary ms-2" style="padding:8px 32px; border-radius:0;">
                        <i class="fas fa-times me-2"></i>Hủy Bỏ
                    </a>
                </div>
            }
        </div>
    </div>
</div>

