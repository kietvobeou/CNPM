@model XUAT_CHIEU
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_KhachHangLayout.cshtml";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container-fluid py-4" style="background-color:#111;">
    <div class="text-center text-white py-3"
         style="background-color:#7b0000; letter-spacing:2px; font-size:32px; font-weight:700;">
        CHỈNH SỬA XUẤT CHIẾU
    </div>

    <div class="d-flex justify-content-center mt-5">
        <div class="card p-4" style="width:80%; background-color:#333; border:none;">
            @using (Html.BeginForm("Edit", "XuatChieu", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.IDXuatChieu)

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-white">Phim</label>
                        @Html.DropDownList("IDPhim", (SelectList)ViewBag.IDPhim, "Chọn phim", new { @class = "form-control bg-dark text-white" })
                        @Html.ValidationMessageFor(model => model.IDPhim, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label text-white">Phòng Chiếu</label>
                        @Html.DropDownList("IDPhong", (SelectList)ViewBag.IDPhong, "Chọn phòng", new { @class = "form-control bg-dark text-white" })
                        @Html.ValidationMessageFor(model => model.IDPhong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label text-white">Ngày Chiếu</label>
                        @Html.EditorFor(model => model.NgayChieu, new { htmlAttributes = new { @class = "form-control bg-dark text-white", type = "date" } })
                        @Html.ValidationMessageFor(model => model.NgayChieu, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label text-white">Giờ Chiếu</label>
                        @Html.EditorFor(model => model.GioChieu, new { htmlAttributes = new { @class = "form-control bg-dark text-white", type = "time" } })
                        @Html.ValidationMessageFor(model => model.GioChieu, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label text-white">Giá Vé (VNĐ)</label>
                        @Html.EditorFor(model => model.GiaVe, new { htmlAttributes = new { @class = "form-control bg-dark text-white", type = "number", min = "0", step = "1000" } })
                        @Html.ValidationMessageFor(model => model.GiaVe, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn" style="background-color:#7b0000; color:white; padding:8px 32px; border-radius:0;">
                        <i class="fas fa-save me-2"></i>Lưu Thay Đổi
                    </button>
                    <a href="@Url.Action("Index", "XuatChieu")" class="btn btn-secondary ms-2" style="padding:8px 32px; border-radius:0;">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            // Format ngày hiện tại thành định dạng yyyy-MM-dd cho input type="date"
            var ngayChieuInput = document.getElementById('NgayChieu');
            if (ngayChieuInput && ngayChieuInput.value) {
                var date = new Date(ngayChieuInput.value);
                var formattedDate = date.toISOString().split('T')[0];
                ngayChieuInput.value = formattedDate;
            }

            // Format giờ cho input type="time"
            var gioChieuInput = document.getElementById('GioChieu');
            if (gioChieuInput && gioChieuInput.value) {
                var timeValue = gioChieuInput.value;
                // Nếu là TimeSpan, cần format lại
                if (timeValue.includes(':')) {
                    var timeParts = timeValue.split(':');
                    if (timeParts.length >= 2) {
                        gioChieuInput.value = timeParts[0] + ':' + timeParts[1];
                    }
                }
            }
        });
    </script>
}